<resources>

    <!--
        Base application theme for API 21+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 21+ devices.
    -->
    
    <style name="AppTheme" parent="AppBaseTheme">
        
    </style>
    
    
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/MyActionBar2</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="buttonStyle">@style/MyButton</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="MyButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>
	
     <style name="MyActionBar2" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:background">#f9f9f9</item>
       
        <!-- <item name="android:actionBarSize">40.0dip</item> -->
    </style>

     
</resources>
