<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:aigestudio="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_fon"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">



            <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            aigestudio:wheel_curved="true"
            aigestudio:wheel_atmospheric="true"
            aigestudio:wheel_cyclic="true"/>

            <com.aigestudio.wheelpicker.WheelPicker
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                aigestudio:wheel_curved="true"
                aigestudio:wheel_atmospheric="true"
                aigestudio:wheel_cyclic="true"/>

            <com.aigestudio.wheelpicker.WheelPicker
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                aigestudio:wheel_curved="true"
                aigestudio:wheel_atmospheric="true"
                aigestudio:wheel_cyclic="true"/>

    </LinearLayout>
    </LinearLayout>

    <LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/background_title"
android:orientation="vertical">

<include
    android:id="@+id/include1"
    layout="@layout/title_status_save"
    android:layout_width="match_parent"
    android:layout_height="40dp" />
</LinearLayout>
    </RelativeLayout>